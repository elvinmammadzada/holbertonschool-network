#!/usr/bin/env bash
# File: 0-change_your_home_IP
# Description: Change localhost to 127.0.0.2 and facebook.com to 8.8.8.8 in /etc/hosts

HOSTS_FILE="/etc/hosts"

# 1. localhost-un IPv4 ünvanını dəyiş
sudo sed -i "s/^127\.0\.0\.1/127.0.0.2/" $HOSTS_FILE

# 2. facebook.com üçün 8.8.8.8 əlavə et və ya dəyişdir
if grep -q "facebook.com" $HOSTS_FILE; then
    sudo sed -i "s/.*facebook\.com/8.8.8.8 facebook.com/" $HOSTS_FILE
else
    echo "8.8.8.8 facebook.com" | sudo tee -a $HOSTS_FILE > /dev/null
fi
